# Configuración de la aplicación
ASPNETCORE_ENVIRONMENT=Development
ASPNETCORE_URLS=http://localhost:6000;https://localhost:6001

# Configuración de la base de datos local
DB_SERVER=localhost
DB_NAME=gestmantia_dev
DB_USER=gestmantia_user
DB_PASSWORD=YourSecurePassword123! # ¡CAMBIAR ESTA CONTRASEÑA!
DB_PORT=5432
DB_HOST=localhost

# JWT Configuration para Docker Compose
JWT_KEY=ThisIsMyDevelopmentSuperSecretKey32Chars! # ¡CAMBIAR ESTA CLAVE! (Debe tener al menos 32 caracteres)
JWT_ISSUER=GestMantIA.API
JWT_AUDIENCE=GestMantIA.Client
JWT_EXPIRE_DAYS=1

# CORS Configuration para Docker Compose
CORS_ALLOWED_ORIGINS=http://localhost:7000;https://localhost:7001;http://localhost:5001;https://localhost:5002;http://localhost:8082;https://localhost:5000

# PostgreSQL Admin
PGADMIN_DEFAULT_EMAIL=admin@gestmantia.com
PGADMIN_DEFAULT_PASSWORD=admin

# Application URLs
API_URL=http://localhost:6000
WEB_URL=http://localhost:6001

# SSL Certificate Password
CERT_PASSWORD=YourCertificatePassword

# Environment
ASPNETCORE_ENVIRONMENT=Development

# Configuración de correo (para futuros usos)
SMTP_SERVER=smtp.example.com
SMTP_PORT=587
SMTP_USER=user@example.com
SMTP_PASSWORD=YourEmailPassword
SMTP_FROM=noreply@gestmantia.com
SMTP_USE_SSL=true

# Configuración de Docker
DOCKER_REGISTRY=
COMPOSE_PROJECT_NAME=gestmantia
