# Configuración de la aplicación
ASPNETCORE_ENVIRONMENT=Development
ASPNETCORE_URLS=http://+:80

# Configuración de la base de datos
DB_SERVER=db
# Database Configuration
DB_NAME=gestmantia
DB_USER=gestmantia
DB_PASSWORD=YourStrong!Passw0rd
DB_PORT=5432
DB_HOST=db

# JWT Configuration
JWT_KEY=YourSuperSecretKeyForJWTTokenGenerationChangeThisInProduction
JWT_ISSUER=GestMantIA-API
JWT_AUDIENCE=GestMantIA-Client
JWT_EXPIRE_DAYS=7

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:5001,https://localhost:5002

# PostgreSQL Admin
PGADMIN_DEFAULT_EMAIL=admin@gestmantia.com
PGADMIN_DEFAULT_PASSWORD=admin

# Application URLs
API_URL=http://localhost:5000
WEB_URL=http://localhost:5001

# SSL Certificate Password
CERT_PASSWORD=YourCertificatePassword

# Environment
ASPNETCORE_ENVIRONMENT=Developmentmantia.com

# Configuración de correo (para futuros usos)
SMTP_SERVER=smtp.example.com
SMTP_PORT=587
SMTP_USER=user@example.com
SMTP_PASSWORD=YourEmailPassword
SMTP_FROM=noreply@gestmantia.com
SMTP_USE_SSL=true

# Configuración de Docker
DOCKER_REGISTRY=
COMPOSE_PROJECT_NAME=gestmantia
