<MudList T="object" Dense="true">
    <!-- Inicio -->
    <MudNavLink Href="/" Match="NavLinkMatch.All">
        <MudIcon Icon="@Icons.Material.Filled.Home" Class="mr-2" />
        <MudText>Inicio</MudText>
    </MudNavLink>

    <!-- Gestión de Usuarios -->
    <AuthorizeView Roles="Admin">
        <MudNavGroup Title="Administración" Icon="@Icons.Material.Filled.AdminPanelSettings">
            <MudNavLink Href="/admin/usuarios">
                <MudIcon Icon="@Icons.Material.Filled.People" Class="mr-2" />
                <MudText>Usuarios</MudText>
            </MudNavLink>
            <MudNavLink Href="/admin/roles">
                <MudIcon Icon="@Icons.Material.Filled.AssignmentInd" Class="mr-2" />
                <MudText>Roles</MudText>
            </MudNavLink>
        </MudNavGroup>
    </AuthorizeView>

    <!-- Mantenimientos -->
    <MudNavGroup Title="Mantenimientos" Icon="@Icons.Material.Filled.Build">
        <MudNavLink Href="/mantenimientos/equipos">
            <MudIcon Icon="@Icons.Material.Filled.Devices" Class="mr-2" />
            <MudText>Equipos</MudText>
        </MudNavLink>
        <MudNavLink Href="/mantenimientos/tareas">
            <MudIcon Icon="@Icons.Material.Filled.Assignment" Class="mr-2" />
            <MudText>Tareas</MudText>
        </MudNavLink>
    </MudNavGroup>

    <!-- Reportes -->
    <MudNavGroup Title="Reportes" Icon="@Icons.Material.Filled.BarChart">
        <MudNavLink Href="/reportes/estadisticas">
            <MudIcon Icon="@Icons.Material.Filled.Analytics" Class="mr-2" />
            <MudText>Estadísticas</MudText>
        </MudNavLink>
        <MudNavLink Href="/reportes/bitacora">
            <MudIcon Icon="@Icons.Material.Filled.History" Class="mr-2" />
            <MudText>Bitácora</MudText>
        </MudNavLink>
    </MudNavGroup>
</MudList>

@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
