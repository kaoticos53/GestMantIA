@using Microsoft.AspNetCore.Components
@using MudBlazor

<CascadingValue Value="this">
    @ChildContent
</CascadingValue>

@code {
    [Parameter] public RenderFragment? ChildContent { get; set; }
    
    [CascadingParameter] public MudForm? Form { get; set; }
    
    protected override void OnInitialized()
    {
        if (Form == null)
        {
            throw new InvalidOperationException($"{nameof(MudFormGrowWidth)} must be used within a {nameof(MudForm)}");
        }
    }
}
