# Configuración de la base de datos
DB_HOST=localhost
DB_PORT=5432
DB_NAME=gestmantia_dev
DB_USER=postgres
DB_PASSWORD=postgres

# Configuración de JWT
JWT_KEY=ClaveSecretaMuyLargaYParaNadaSeguraEnEntornoDeDesarrollo
JWT_ISSUER=GestMantIA-Dev
JWT_AUDIENCE=GestMantIA-Client
JWT_EXPIRE_DAYS=7

# Configuración de la aplicación
ASPNETCORE_ENVIRONMENT=Development
DOTNET_ENVIRONMENT=Development

# Configuración de Docker (opcional)
DOCKER_HUB_USERNAME=tu_usuario_docker
TAG=latest

# Configuración de correo (opcional)
SMTP_SERVER=smtp.example.com
SMTP_PORT=587
SMTP_USER=tu_correo@example.com
SMTP_PASSWORD=tu_contraseña
SMTP_FROM=noreply@gestmantia.com
SMTP_ENABLE_SSL=true

# Configuración de URLs
API_URL=http://localhost:5000
WEB_URL=http://localhost:5001

# Configuración de almacenamiento (opcional)
STORAGE_PROVIDER=Local
STORAGE_PATH=./Storage

# Configuración de logs
LOG_LEVEL=Information
LOG_FILE=logs/log-.txt
LOG_RETENTION_DAYS=30
